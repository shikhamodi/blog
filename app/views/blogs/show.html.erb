<div class = "container">
<section>
  <div class="panel panel-primary">
    <div class="panel-body">
    	<div class="row">
        <div class="col-lg-6 col-sm-4">
					<div class="col-lg-4 col-sm-4">
						<strong class="text-center">Title:</strong>
						<%= @blog.title %>
						<strong>Discription:</strong>
						<%= @blog.discription %>
						<strong>Image:</strong><br />
						<%#= image_tag @blog.image_url.to_s,:size => "180x180" %>
						<% @post_attachments.each do |p| %>
  						<%= image_tag p.avatar_url, :size => "180x180" %>
  						<%= link_to 'New image', new_post_attachment_path, :class => "btn btn-default" %><br />
  						<%= link_to "Update Image", edit_post_attachment_path(p), :class => "btn btn-default" %><br />
						<% end %>
						<strong>youtube_url:</strong><br /> 
						<%= embed(@blog.youtube_url) rescue 0 %>
						<%= link_to "Playlist", new_playlist_path %>
						<%= link_to "All Videos" playlists_path %>
 						<div id="blog_comments">
							<%= render 'comments/comment' %>
						</div>
						<%= render "comments/form" %>
						<%= link_to "Back", blogs_path %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section> 