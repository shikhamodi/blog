<div>
  <strong>Title:</strong>
  <%= @blog.title %>
</div>
<div>
	<strong>Discription:</strong>
	<%= @blog.discription %>
</div>
<div>
	<strong>Image:</strong><br />
 	<%= image_tag @blog.image_url.to_s %>
</div>
<div>
	<strong>youtube_url:</strong><br /> 
	<%= embed(@blog.youtube_url) rescue 0 %>
</div>
<div>
	<% @blog.comments.each do |comment| %>
	 <div>
    <strong>Commenter:</strong>
    <%= comment.comment %>
  </div>
  
  <% end %>
</div>
<%= form_for ([@blog, @blog.comments.build]) do |f| %>
<%= f.label :comment %>
<%= f.text_field :comment %>
<%= f.submit "save" %>
<% end %>
<%= link_to "Back", blogs_path %>
 