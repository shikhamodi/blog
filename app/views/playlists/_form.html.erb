<div class="container" >
<div class="row">
<h2>Add videos Here</h2>
<%= form_for @playlist do |f| %>
	<% if @playlist.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@playlist.errors.count, "error") %> prohibited
	        this playlist from being saved:
	      </h2>
	      <ul>
	        <% @playlist.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
	<div class="form-group">
		<%= f.label :link %>
		<%= f.text_field :link, :class =>'form-group' %>
	</div>
	<div class="form-group">
		<%= f.label :video_title %>
		<%= f.text_field :video_title, :class =>'form-group' %>
	</div>
	<div class="form-group">
		<%= f.label :author %>
		<%= f.text_field :author, :class =>'form-group' %>
	</div>
	<div class="form_group">
		<%= f.hidden_field :blog %>
	</div>
	<div class="actions">
		<%= f.submit "submit", :class => 'btn btn-primary' %>
	</div>
<% end %>
