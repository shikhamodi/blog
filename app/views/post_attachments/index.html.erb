<div class="container">
<section>
  <div class="panel panel-primary">
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-4 col-sm-4">
          <div class="col-lg-4 col-sm-4">
            <p id="notice"><%= notice %></p>
                <h1 class="center-text">Images</h1>
              </div>
              <table>
                <thead>
                  <tr>
                    <th colspan="3"></th>
                  </tr>
                </thead>
              <tbody>
                <% @post_attachments.each do |post_attachment| %>
                  <tr>
                  <div class="container">
                    <ul class="row">
                    <div class="col-sm-6 col-md-4">

                      <td class="thumbnail"><%= image_tag(post_attachment.avatar_url(:thumb).to_s) %></td>
                    </ul>
                  </div>
                  <td><%= link_to 'Show', post_attachment, :class => "btn btn-info" %> | </td> 
                  <td><%= link_to 'Edit', edit_post_attachment_path(post_attachment), :class => 'btn btn-primary' %> | </td>  
                  <td><%= link_to 'Destroy', post_attachment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
                    
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br>
            <%= link_to 'New Post attachment', new_post_attachment_path, :class => 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
    </div>

